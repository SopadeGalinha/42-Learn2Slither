# EditorConfig is awesome: https://EditorConfig.org

root = true

# All files
[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# C files
[*.{c,h}]
indent_size = 4
max_line_length = 100

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Makefiles
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 4
